{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
                {
                    "ts": "never"
                }
        ],
        "import/no-extraneous-dependencies": [
            "error",
            { "devDependencies": ["**/*.spec.js"] }
        ],
        "prettier/prettier": "error",
        "import/prefer-default-export": "off",
        "camelcase": "off"
    },
    "settings": {
        "import/resolver": {
          "typescript": {}
        }
    }
}
